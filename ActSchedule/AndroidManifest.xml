<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.actschedule"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetSchedule"
            android:label="@string/title_activity_set_schedule" >
        </activity>
        <activity
            android:name=".SetWep"
            android:label="@string/title_activity_set_wep" >
        </activity>
        <activity
            android:name=".OpenValve"
            android:label="@string/title_activity_open_valve" >
           
        </activity>
        <activity
            android:name=".SyncDate"
            android:label="@string/title_activity_sync_date" >
           
        </activity>
        <activity
            android:name=".CloseValve"
            android:label="@string/title_activity_close_valve" >
            
        </activity>
        <activity
            android:name=".Config"
            android:label="Configuration" >
            
        </activity>
    </application>

</manifest>